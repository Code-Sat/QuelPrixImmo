<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:orientation="vertical"
        tools:context="peio.fouillot.projetandroid.controller.MainActivity">

        <TextView
            android:id="@+id/row_result_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19 rue des avenue marchandes, 64210 Arbonne"
            android:textSize="14sp"
            android:gravity="left"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/row_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maison 5 pièces de 102m²"
            android:textSize="13sp"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/row_result_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendu 254 254€ - 1425€/m²"
            android:textSize="13sp"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:gravity="left"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>